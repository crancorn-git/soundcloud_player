{
  "name": "soundcloud-player",
  "version": "0.3.0",
  "description": "Cranix SoundCloud Player",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "electron .",
    "dist": "npm run build && electron-builder --publish=always",
    "pack": "npm run build && electron-builder --dir"
  },
  "dependencies": {
    "electron-log": "4.4.8",
    "electron-updater": "^6.6.2",
    "electron-window-state": "^5.0.3",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.cran.soundcloudplayer",
    "productName": "Cranix Player",
    "directories": {
      "buildResources": "build",
      "output": "dist_electron"
    },
    "files": [
      "main.js",
      "preload.js",
      "dist/**/*",
      "build/icon.*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "crancorn-git",
        "repo": "soundcloud_player"
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "build/icon.png",
      "category": "public.app-category.music"
    }
  }
}
